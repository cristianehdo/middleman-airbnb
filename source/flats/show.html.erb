<% flat = data.flats[owner] %>

<div class="banner-short" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'););"></div>


<div class="container">
  <div class="flexbox">
    <div class="description">
      <div class="name">
        <h3>flat.name</h3>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class:"card-user" %>
      </div>
      <div class="card-category"><%= flat.city_name %></div>
      <div class="card-description">
        <h3><%= flat.description %></h3>
        <p><%= flat.city_name %></p>
      </div>
    </div>
    <div class="form">

    </div>
  </div>
</div>
